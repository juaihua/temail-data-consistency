<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syswin.temail.data.consistency.infrastructure.ListenerEventMapper">
  <insert id="insert" parameterType="ListenerEvent" useGeneratedKeys="true" keyProperty="id">
    insert into listener_event
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="fromAddr != null">
        from_addr,
      </if>
      <if test="toAddr != null">
        to_addr,
      </if>
      <if test="status != null">
        status,
      </if>
      <if test="contentId != null">
        content_id,
      </if>
      <if test="content != null">
        content,
      </if>
      <if test="insertTime != null">
        time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="fromAddr != null">
        #{fromAddr,jdbcType=VARCHAR},
      </if>
      <if test="toAddr != null">
        #{toAddr,jdbcType=VARCHAR},
      </if>
      <if test="status != null">
        #{status,jdbcType=VARCHAR},
      </if>
      <if test="contentId != null">
        #{contentId,jdbcType=BIGINT},
      </if>
      <if test="content != null">
        #{content,jdbcType=VARCHAR},
      </if>
      <if test="insertTime != null">
        #{insertTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>
  <select id="selectReadyToSend" resultType="ListenerEvent">
    select id, from_addr, to_addr, status, content_id, content, insert_time
    from listener_event
    where status = 'new'
    limit 0,100
  </select>
  <update id="updateStatusById">
    update listener_event set status=#{status,jdbcType=VARCHAR}
    where id=#{id}
  </update>
</mapper>